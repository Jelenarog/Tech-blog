

 <div class="editBlog">
  <section style="background-color: #eee;">
    <div class="container my-5 py-5">
      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-start align-items-center">
                <div>
                <input
                    class="form-control"
                    id="title"
                    rows="4"
                    style="background: #fff;"
                    value="{{title}}"
                  ></input>
                </div>
              </div>
            </div>
            <div
              class="card-footer py-3 border-0"
              style="background-color: #f8f9fa;"
            >
              <div class="d-flex flex-start w-100">

                <div class="form-outline w-100 "style="height: 200px">
                  <input
                    class="form-control"
                    id="text"
                    rows="4"
                    style="background: #fff;"
                   value="{{text}}"
                  ></input>
                </div>
              </div>
              <div class="float-end mt-2 pt-1">
                <button
                  id="postEdit"
                  class="postEdit btn btn-secondary btn-sm"
                >Post blog</button>
                <button
                  id="cancelEdit"
                  class="btn btn-outline-secondary btn-sm"
                >Cancel</button>
                   <button
                  id="delete"
                  class="btn btn-outline-secondary btn-sm"
                >Delete</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>  